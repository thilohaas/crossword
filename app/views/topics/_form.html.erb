<%= semantic_form_for(@topic) do |f| %>
  <%= f.inputs do %>
    <%= f.input :name, :input_html => { :class => 'span9' } %>
    <%= f.input :description, :input_html => { :class => 'span9', :rows => '5' } %>
  <% end %>
  <%= f.actions do %>
    <%= f.action :submit, :as => :button, :button_html => { :class => 'btn btn-success' } %>
  <% end %>
<% end %>
