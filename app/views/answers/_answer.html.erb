<li>
    <%= answer.answer %>
    <%= ratings_block("answer", answer.id, current_user.id) %>
        <%= ratings_average_block("answer", answer.id) %>
    <%= link_to [answer.question.topic, answer.question, answer], :method => :delete, :data => { :confirm => 'Do you really want to delete this answer?' }, :class => 'answer-delete pull-right' do %>
      <i class="icon-remove"></i>
    <% end %>
</li>